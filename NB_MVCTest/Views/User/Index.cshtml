@model List<User>

<div class="container">
    
    <div class="row">
        <div class="col md-6">
            <form class ="d-flex" asp-controller="User" asp-action="Index">
                <input name="strSearch" class="form-control md-1" type="search" placeholder="Search"/>
                <button class="btn btn-secondary" type="submit">Search</button>
            </form>

        </div>
        <div class="col md-6">
            <a asp-controller="User" asp-action="Index" class="text-dark">Back to full list</a>

        </div>
    </div>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Email ID</th>
                <th>User Name</th>
                <th>Date of Birth</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.FirstName</td>
                    <td>@user.EmailId</td>
                    <td>@user.UserName</td>
                    <td>@user.BirthDate</td>
                </tr>
            }
        </tbody>

    </table>
</div>